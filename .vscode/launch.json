{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.elf",
      "args": [],
      "stopAtEntry": true,
      "cwd": ".",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "targetArchitecture": "arm",
      "miDebuggerPath": "arm-none-eabi-gdb",
      "logging": {"engineLogging": true},

      "launchCompleteCommand": "None",

      "setupCommands": [
        { "text": "-target-select remote localhost:4242", "description": "connecting" },
        { "text": "-file-exec-and-symbols ${workspaceFolder}/src/main.elf", "description": "load file" },
        { "text": "-interpreter-exec console \"monitor reset halt\"" },
        { "text": "-target-download", "description": "flash target" }
      ],
    }
  ]
}